#!/usr/bin/env bash

set -euo pipefail

if (($# != 2)); then
  echo "Usage: $(basename "$0") <namespace> <secret-name>" >&2
  exit 1
fi

kubectl get secret -n "${1}" "${2}" \
  -o go-template='{{range $k,$v := .data}}{{printf "%s: " $k}}{{if not $v}}{{$v}}{{else}}{{$v | base64decode}}{{end}}{{"\n"}}{{end}}'
