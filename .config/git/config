[core]
  editor = nvim
  sshCommand = '/c/Program Files/OpenSSH/ssh.exe'
  longpaths = true
  autocrlf = input

[color "diff"]
  whitespace = red reverse

[diff]
  tool = nvimdiff

[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[merge]
  tool = nvimdiff

[mergetool]
  keepBackup = false
  prompt = false

[mergetool "nvimdiff"]
  cmd = "nvim -d \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\" -c 'wincmd J | wincmd ='"

